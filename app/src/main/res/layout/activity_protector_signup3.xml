<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorMain"
    android:orientation="vertical"
    android:weightSum="3"
    tools:context=".activity.ProtectorSignup1">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:orientation="horizontal"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:paddingTop="45dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:background="@drawable/logo" />

        <TextView
            android:textStyle="bold"
            android:id="@+id/protector3Back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="뒤로가기"
            android:textColor="@color/colorLogin"
            android:textSize="14sp" />
    </FrameLayout>

    <TextView
        android:id="@+id/signup3"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginLeft="24dp"
        android:layout_weight="0.35"
        android:gravity="bottom"
        android:text="보호자 회원가입(3/3)"
        android:textColor="@color/colorSub"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="center|top"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginTop="42dp">

            <Button
                android:id="@+id/protector3SeePd"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="3dp"
                android:background="@drawable/unrock"
                android:visibility="invisible" />

            <View
                android:id="@+id/protector3PdView"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_centerInParent="true"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_login_et" />

            <TextView
                android:id="@+id/protector3hintPd"
                android:layout_width="wrap_content"
                android:layout_height="4dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="3dp"
                android:background="@color/colorMain"
                android:paddingLeft="6dp"
                android:paddingRight="12dp"
                android:text="비밀번호"
                android:textColor="@color/colorMain"
                android:textSize="6sp"
                android:visibility="invisible" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/Protector3PdLayout"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:theme="@style/SignupStyle"
                app:hintTextAppearance="@style/HintTextStyle">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/Protector3Pd"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/colorMain"
                    android:fontFamily="sans-serif-light"
                    android:hint="비밀번호"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:textColor="#000"
                    android:textColorHint="@color/colorLogin"
                    android:textSize="16sp"
                    android:textStyle="normal"
                    android:theme="@style/LoginStyle" />

            </android.support.design.widget.TextInputLayout>
        </RelativeLayout>

        <TextView
            android:id="@+id/protector3ErrorText"
            android:layout_width="match_parent"
            android:layout_marginTop="8dp"
            android:layout_height="wrap_content"
            android:paddingLeft="25dp"
            android:textStyle="bold"
            android:textSize="8sp"
            android:textColor="@color/colorError"
            android:visibility="invisible"
            android:text="8 ~ 20자의 영문, 숫자로 이루어진 비밀번호를 기입해주세요"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginTop="21dp">

            <Button
                android:id="@+id/protector3SeeCheckPd"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="3dp"
                android:background="@drawable/unrock"
                android:visibility="invisible" />

            <View
                android:id="@+id/protector3CheckPdView"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_centerInParent="true"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_login_et" />

            <TextView
                android:id="@+id/Protector3HintCheckPd"
                android:layout_width="wrap_content"
                android:layout_height="4dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="3dp"
                android:background="@color/colorMain"
                android:paddingLeft="6dp"
                android:paddingRight="20dp"
                android:text="비밀번호 확인"
                android:textColor="@color/colorMain"
                android:textSize="6sp"
                android:visibility="invisible" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/Protector3CheckPdLayout"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:theme="@style/SignupStyle"
                app:hintTextAppearance="@style/HintTextStyle">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/Protector3CheckPd"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/colorMain"
                    android:fontFamily="sans-serif-light"
                    android:hint="비밀번호 확인"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:textColor="#000"
                    android:textColorHint="@color/colorLogin"
                    android:textSize="16sp"
                    android:textStyle="normal"
                    android:theme="@style/LoginStyle" />

            </android.support.design.widget.TextInputLayout>
        </RelativeLayout>
        <TextView
            android:id="@+id/protector3CheckErrorText"
            android:layout_width="match_parent"
            android:layout_marginTop="8dp"
            android:layout_height="wrap_content"
            android:paddingLeft="25dp"
            android:textStyle="bold"
            android:textSize="8sp"
            android:textColor="@color/colorError"
            android:visibility="invisible"
            android:text="비밀번호가 일치하지 않습니다."/>
        <Button
            android:id="@+id/protector3NextBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="110dp"
            android:background="@drawable/bg_loginbtn"
            android:fontFamily="sans-serif-medium"
            android:letterSpacing="0.01"
            android:lineSpacingExtra="2sp"
            android:text="회원가입  완료"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:textStyle="normal" />
    </LinearLayout>
</LinearLayout>
