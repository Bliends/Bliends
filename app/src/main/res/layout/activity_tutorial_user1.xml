<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center|top"
    android:orientation="vertical"
    android:background="@color/colorLoginPrimaryDark"
    tools:context=".activity.TutorialUser1">

    <FrameLayout
        android:layout_width="match_parent"
        android:paddingTop="32dp"
        android:paddingRight="24dp"
        android:paddingBottom="59dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tutroialNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:lineSpacingExtra="6sp"
            android:textColor="@color/colorLogin"
            android:textSize="14sp"
            android:text="다음으로" />
    </FrameLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bluetooth"/>

    <TextView
        android:layout_marginTop="48dp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="#1e2640"
        android:lineSpacingExtra="8sp"
        android:gravity="center_horizontal"
        android:text="블루투스 기기 설정"
        />

    <TextView
        android:layout_marginTop="24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="#1e2640"
        android:lineSpacingExtra="12sp"
        android:gravity="center_horizontal"
        android:text="블루투스 설정창에서  Bliends를 검색해주시고\n페어링을 위해 pin번호를 입력해주세요"
        />

    <Button
        android:id="@+id/tutroaluserBluetooth"
        android:layout_marginTop="71dp"
        android:layout_width="wrap_content"
        android:textSize="14sp"
        android:fontFamily="sans-serif-medium"
        android:textStyle="normal"
        android:textColor="#ffffff"
        android:letterSpacing="0.01"
        android:lineSpacingExtra="2sp"
        android:text="설정하러 가기"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_loginbtn"/>

</LinearLayout>